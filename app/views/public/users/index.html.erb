<div class="container pt-1">
  <div class="users_title_group d-flex flex-wrap">
    <h3><span class="page_title col-10 ml-4">会員一覧</span></h3>
    <span><strong>　<%= flash[:user_relation] %></strong></span>
    <!-- 絞り込み用のselect_field -->
  </div>
  <div class="row">
    <div class="col-12 mx-auto my-2 d-flex">
      <table class="table mt-2">
        <thead>
          <tr>
            <th>ユーザー名</th>
            <th>投稿レシピ数</th>
            <th>フォロー数</th>
            <th>フォロワー数</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <% if user.email != "guest@example.com" && user.is_active %>
              <tr>
                <td><%= link_to user.name, user_path(user) %></td>
                <td>
                  <%= user.recipes.where(is_release: true).count %>
                </td>
                <td><%= user.followers.count %></td>
                <td><%= user.followeds.count %></td>
                <td class="text-danger">
                  <% if user.followed_by?(current_user) %>
                    <strong><%= "フォロー中" %></strong>
                  <% end %>
                </td>
                <td>
                  <% if user != current_user %>
                    <% unless user.followed_by?(current_user) %>
                      <%= link_to 'フォローする', user_user_relationships_path(user, name: user.name), class:"btn btn-sm btn-success border border-dark w-75 mx-auto", method: :post %>
                    <% else %>
                      <%= link_to 'フォローを外す', user_user_relationships_path(user, name: user.name), class:"btn btn-sm btn-danger border border-dark w-75 mx-auto", method: :delete %>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center"><%= paginate @users %></div>
</div>
