<div class="container pt-1">
  <div class="row d-flex flex-wrap">
    <div class="col-lg-6 col-md-10 mx-md-auto col-sm-11 mx-sm-auto col-12">
      <% if @user == current_user %>
        <h3><span class="page_title ml-4">マイページ</span></h3>
      <% else %>
        <h3><span class="page_title ml-4">会員情報</span></h3>
      <% end %>
      <span id="follow_user_<%= @user.id %>"><%= render 'public/users/show', user: @user %></span>
      <%= link_to '会員一覧へ戻る', users_path, class: "btn btn-secondary border border-dark" %>
      <% if @user == current_user %>
        <div class="my_page_button_group d-flex mt-3">
          <%= link_to '新規投稿', new_recipe_path, class: "btn btn-info border border-dark" %>
          <%= link_to '情報編集へ', edit_user_path(current_user), class: "btn btn-success border border-dark offset-1" %>
        </div>
      <% end %>
      <span id="dm_user_<%= @user.id %>"><%= render 'public/users/dm_link', user: @user %></span>
    </div>
    <div class="col-lg-5 col-md-10 mt-md-3 col-sm-11 mt-sm-3 mt-3 mx-auto col-12 d-flex flex-wrap">
      <div class="col-lg-12 col-md-9 col-11 d-flex justify-content-center"><h4>－投稿レシピ－</h4></div>
      <%= render 'public/recipes/index', recipes: @user_recipes %>
      <div class="mx-auto"><%= paginate @user_recipes %></div>
    </div>
  </div>
</div>
