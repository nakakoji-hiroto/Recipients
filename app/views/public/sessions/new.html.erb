<div class="container pt-4">
  <h4><span class="page_title col-10 ml-4">ログイン</span></h4>
  <div class="row">
    <div class="col-md-8 col-sm-10 col-12 mx-auto my-5">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group form-inline d-flex justify-content-between">
          <%= f.label :email, 'メールアドレス' %><br />
          <%= f.email_field :email, class:"form-control w-50 border border-dark", autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
        </div>
      
        <div class="form-group form-inline d-flex justify-content-between">
          <%= f.label :password, 'パスワード' %><br />
          <%= f.password_field :password, class:"form-control w-50 border border-dark", autocomplete: "current-password" %>
        </div>
        <div class="invalid_user_alert text-danger"><%= flash[:alert] %></div>
        <div class="actions d-flex justify-content-center w-100 mt-5">
          <%= f.submit "ログイン", class:"btn btn-info border border-dark w-50 mt-3 px-5 py-2" %>
        </div>
      <% end %>
    </div>
  </div>
  <h5 class="mt-5"><span class="page_title col ml-5">会員登録がお済みでない方</span></h5>
  <div class="col-8 py-3 ml-5">
    <span><strong><%= render "public/shared/links" %>から新規登録を行ってください。</strong></span>
  </div>
</div>
