<div class="container-fluid header_group py-4">
  <div class="row">
    <div class="col-5">
      <% if user_signed_in? %>
      <div class="welcome">
        <%= "ようこそ #{current_user.name} さん" %>
      </div>
      <% end %>
    </div>
    <div class="col-5 mx-auto d-flex justify-content-between">
      <%= link_to 'トップページ', root_path, class: 'btn btn-sm btn-light px-3' %>
      <% if user_signed_in? %>
        <% unless current_user.email == "guest@example.com" %>
          <%= link_to 'マイページ', user_path(current_user), class: 'btn btn-sm btn-primary' %>
          <%= link_to '会員一覧', users_path, class: 'btn btn-sm btn-light' %>
        <% end %>
        <%= link_to '投稿一覧', recipes_path, class: 'btn btn-sm btn-info' %>
        <%= link_to 'ログアウト', destroy_user_session_path, class: 'btn btn-sm btn-danger', method: :delete %>
      <% elsif admin_signed_in? %>
        <%= link_to '投稿一覧', admin_recipes_path, class: 'btn btn-sm btn-success' %>
        <%= link_to '会員一覧', admin_path, class: 'btn btn-sm btn-info' %>
        <%= link_to 'ログアウト', destroy_admin_session_path, class: 'btn btn-sm btn-dark', method: :delete %>
        <strong class="text-light bg-danger p-1">管理者用</strong>
      <% else %>
        <%= link_to 'ログイン', new_user_session_path, class: 'btn btn-sm btn-success' %>
        <%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, class: "btn btn-secondary btn-sm ml-3", method: :post %>
      <% end %>
    </div>
  </div>
</div>


  