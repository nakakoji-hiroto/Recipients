<div class="container-fluid header_group py-4">
  <div class="row">
    <div class="col-5">
      <% if user_signed_in? %>
      <div class="welcome">
        <%= "ようこそ #{current_user.name} さん" %>
      </div>
      <% end %>
    </div>
    <div class="col-5 mx-auto d-flex justify-content-between">
      <%= link_to 'トップページ', root_path, class: 'btn btn-sm btn-light px-3' %>
      <% if user_signed_in? %>
        <%= link_to '新規投稿', new_recipe_path, class: 'btn btn-sm btn-info' %>
        <%= link_to 'ログアウト', destroy_user_session_path, class: 'btn btn-sm btn-danger', method: :delete %>
      <% elsif admin_signed_in? %>
        <strong>管理者用　　</strong>
        <%= link_to 'ログアウト', destroy_admin_session_path, class: 'btn btn-sm btn-dark', method: :delete %>
      <% else %>
        <%= link_to 'ログイン', new_user_session_path, class: 'btn btn-sm btn-success' %>
        <%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, class: "btn btn-secondary btn-sm ml-3", method: :post %>
      <% end %>
    </div>
  </div>
</div>


  