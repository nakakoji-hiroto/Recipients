<div class="container mx-auto">
  <h3><span class="page_title col-10 ml-4">調理手順一覧</span></h3>
  <div class="recipe_top_information d-flex justify-content-around flex-wrap mt-4 p-1">
    <div class="d-flex  align-items-center">
      <h4><span class="col-10 ml-4"><strong><%= @recipe.title %></strong>　　<%= image_tag @recipe.get_recipe_image(300, 200) %></span></h4>
    </div>
    <div class="recipe_material_table w-50 mx-auto">
      <%= render 'admin/recipe_materials/index', recipe: @recipe %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 col-12 mx-auto d-flex flex-wrap">
      <% @recipe_steps.each do |recipe_step| %>
        <div class="card step_card d-flex flex-column mr-3 p-3 my-2">
          <%= image_tag recipe_step.get_recipe_image(100, 100), size: "80x60", class: "mx-auto" %>
          <%= recipe_step.step %>.<br>
          <%= recipe_step.explanation %>
        </div>
      <% end %>
    </div>
  </div>
  <%= link_to 'レシピページへ戻る', admin_recipe_path(@recipe), class: "btn btn-danger p-2 m-3" %>
  <div class="d-flex justify-content-center"><%= paginate @recipe_steps %></div>
</div>
