<div class="container pt-1">
  <div class="row d-flex flex-wrap">
    <div class="col-lg-6 col-md-10 mx-md-auto col-sm-11 mx-sm-auto col-12">
      <h3><span class="page_title ml-4">会員情報</span></h3>
      <span id="admin_user_status_<%= @user.id %>"><%= render 'admin/users/show', user: @user %></span>
      <%= link_to '管理者トップへ戻る', admin_path, class: "btn btn-secondary border border-dark" %>
    </div>
    <div class="col-lg-5 col-md-10 mx-md-auto mt-md-3 col-sm-11 mt-sm-3 mt-3 mx-sm-auto col-12 d-flex justify-content-center flex-wrap">
      <h4>－投稿レシピ－</h4>
      <% @user_recipes.each do |recipe| %>
        <div class="card recipe_card mb-3 p-3 d-flex w-100">
          <div class="row">
            <div class="col-4">
              <%= link_to admin_recipe_path(recipe) do %>
                <%= image_tag recipe.get_recipe_image(100, 100) %>
              <% end %>
            </div>
            <div class="col-8">
              <strong><%= link_to recipe.title, admin_recipe_path(recipe) %></strong>
              <% unless recipe.is_release %>
                <strong><span class="text-danger ml-3">※非公開</span></strong>
              <% end %>
              <br>
              <% case recipe.difficulty %>
                <% when "1" %>
                  難易度：易しい
                <% when "2" %>
                  難易度：やや易しい
                <% when "3" %>
                  難易度：普通
                <% when "4" %>
                  難易度：やや難しい
                <% when "5" %>
                  難易度：難しい
                <% else %>
                  難易度：未設定
              <% end %><br>
              💖<span class="text-danger"><%= recipe.favorites.count %></span><span> 👀<%= recipe.view_counts.count %></span><br>
              <strong><%= recipe.catch_copy %></strong><br>
              投稿者：<%= recipe.user.name %>さん
            </div>
          </div>
        </div>
      <% end %>
      <div class="mx-auto"><%= paginate @user_recipes %></div>
    </div>
  </div>
</div>
