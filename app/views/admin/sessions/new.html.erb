<div class="container pt-5">
  <h4><span class="page_title col-10 ml-4">管理者ログイン</span></h4>
  <div class="row">
    <div class="col-md-8 col-10 mx-auto my-5">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group form-inline d-flex justify-content-between">
          <%= f.label :email, 'メールアドレス' %><br />
          <%= f.email_field :email, class:"form-control w-50 border border-dark", autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="form-group form-inline d-flex justify-content-between">
          <%= f.label :password, 'パスワード' %><br />
          <%= f.password_field :password, class:"form-control w-50 border border-dark", autocomplete: "current-password" %>
        </div>
      
        <div class="actions d-flex justify-content-center w-100 mt-5">
          <%= f.submit "ログイン", class:"btn btn-info border border-dark w-50 px-5 py-2" %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>